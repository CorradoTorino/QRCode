<Window x:Class="QRCodeSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRCodeSample"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
Background="LightBlue">
    <Grid>
        <Label Margin="10,0,0,0" Height="23" Name="Label1">
            Current File:
        </Label>
        <Label Margin="5,0,0,0" Height="25" Name="FileNameLabel" Width="300" />
        <Button Margin="5,0,0,0" Height="23"  Width="75" Click="Button_Click">
            Display
        </Button>
        <Image Name="ImageViewer1" Height="400" Width="400" />
    </Grid>
</Window>

